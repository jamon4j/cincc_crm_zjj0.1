items : [
				{
					header    : '工号',
					align  : 'center',
					dataIndex : 'agtId',
					width     : '10%',
					renderer:function(value, cellMeta, record, rowIndex, columnIndex, store) 
					{                  
						var agtId= record.data['agtId'];      
						return agtId.substring(12,agtId.length);
					}  
				},

				{
					header    : '员工姓名',
					align  : 'center',
